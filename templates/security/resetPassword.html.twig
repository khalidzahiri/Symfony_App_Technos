{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }} Changement mot de passe
{% endblock %}

{% block TitrePage%}
    Changement mot de passe
{% endblock %}

{% block body %}
    {#{{ form(form) }}#}{##}
    {% for message in app.flashes('success') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-success col-md-6 text-center">{{ message }}</div>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="row justify-content-center mt-4">
            <div class="alert alert-danger col-md-6 text-center">{{ message }}</div>
        </div>
    {% endfor %}

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form method="post" action="{{ path('resetPassword') }}">
                <input type="hidden" name="id" value="{{ id }}">
                <div >
                    <label class="my-2" for="">Mot de passe</label>
                    <input class="form-control" placeholder="Saisissez votre mot de passe" type="password" name="password">
                </div>
                <div >
                    <label class="my-2" for="">Confirmation de mot de passe</label>
                    <input class="form-control" placeholder="Saisissez votre mot de passe" type="password" name="confirmPassword">
                </div>
                <button class="btn btn-primary mt-4" type="submit">Envoyer</button>
            </form>
        </div>
    </div>

{% endblock %}
